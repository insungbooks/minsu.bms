<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="minsu.bms.basket.dao.mapper.BasketMapper">
	<select id="getBaskets" parameterType ="string" resultType="basket"> <!-- 아이디값과 일치하는 데이터를 찾으면 user객체로 맵핑해서 리턴 -->
		select basket_num basketNum, user_id userId, book_code bookCode, 
			   book_name bookName, book_price bookPrice
		from baskets
		where user_id = #{userId}
	</select>
	
<select id="getBook" parameterType="string">
		select book_code bookCode
		from books
		where book_code = #{bookCode}
	</select>
	
	<delete id="delBasket" parameterType="string">
		delete baskets where book_code = #{bookCode}
	</delete>
	
	<insert id="addBasket" parameterType="string">
		insert into baskets values(
		#{basketNum}, #{userId}, #{bookCode}, #{bookName}, #{bookPrice})
	</insert>
</mapper>